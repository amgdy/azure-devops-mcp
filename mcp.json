{
  "inputs": [
    {
      "id": "ado_org",
      "type": "promptString",
      "description": "Azure DevOps organization name (e.g. 'contoso')"
    },
    {
      "id": "ado_pat",
      "type": "promptString",
      "description": "Azure DevOps Personal Access Token (for remote server)"
    },
    {
      "id": "server_port",
      "type": "promptString",
      "description": "Remote server port (default: 3000)"
    }
  ],
  "servers": {
    "ado-local": {
      "type": "stdio",
      "command": "mcp-server-azuredevops",
      "args": ["${input:ado_org}"],
      "description": "Local Azure DevOps MCP Server using stdio transport"
    },
    "ado-remote": {
      "type": "sse",
      "command": "mcp-server-azuredevops",
      "args": ["${input:ado_org}", "--remote", "--port", "${input:server_port}", "--pat", "${input:ado_pat}"],
      "url": "http://localhost:${input:server_port}/sse",
      "description": "Remote Azure DevOps MCP Server using HTTP+SSE transport"
    },
    "ado-remote-default": {
      "type": "sse",
      "command": "mcp-server-azuredevops",
      "args": ["${input:ado_org}", "--remote", "--port", "3000", "--pat", "${input:ado_pat}"],
      "url": "http://localhost:3000/sse",
      "description": "Remote Azure DevOps MCP Server on default port 3000"
    }
  }
}
